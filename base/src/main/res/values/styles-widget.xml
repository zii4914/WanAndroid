<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style parent="@android:style/Theme.Holo.Dialog" name="TranslucenceDialog">
    <!-- 是否有边框 -->
    <item name="android:windowFrame">@null</item>
    <!--是否在悬浮Activity之上  -->
    <item name="android:windowIsFloating">true</item>
    <!-- 标题 -->
    <item name="android:windowNoTitle">true</item>
    <!--阴影  -->
    <item name="android:windowIsTranslucent">true</item><!--半透明-->
    <!--背景透明-->
    <item name="android:windowBackground">@android:color/transparent</item>
    <!-- 还可以加入一些弹出和退出的动画 (lan)-->
  </style>

  <style parent="android:Animation" name="anim_dialog_fade">
    <item name="android:windowEnterAnimation">@anim/dialog_fade_in</item>
    <item name="android:windowExitAnimation">@anim/dialog_fade_out</item>
  </style>
</resources>